<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#52824c"
    tools:context=".AverageWater"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="89dp"
        android:layout_marginTop="15dp"
        android:text="@string/plantst_that_use_a_medium_amount_of_water"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/buttonEng"
        app:layout_constraintStart_toStartOf="@+id/button7"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="30dp"
        android:text="peace lily"
        app:layout_constraintBottom_toTopOf="@+id/buttonPhil"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="46dp"
        android:text="arrowhead vine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/buttonCast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="33dp"
        android:text="Cast Iron"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button7"
        tools:text="Cast Iron" />

    <Button
        android:id="@+id/buttonDief"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginBottom="12dp"
        android:text="Dieffenbachia"
        app:layout_constraintBottom_toTopOf="@+id/buttonSpider"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Dieffenbachia" />

    <Button
        android:id="@+id/buttonChi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:text="Chineese Evergreen"
        app:layout_constraintBottom_toTopOf="@+id/buttonDief"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Chineese Evergreen" />

    <Button
        android:id="@+id/buttonEng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="33dp"
        android:text="English Ivy"
        app:layout_constraintBottom_toTopOf="@+id/buttonPalm"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="English Ivy" />

    <Button
        android:id="@+id/buttonPalm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="34dp"
        android:text="Parlor Palm"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Parlor Palm" />

    <Button
        android:id="@+id/buttonSpider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Spider Plant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Spider Plant" />

    <Button
        android:id="@+id/buttonPhil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="19dp"
        android:text="Philidendron"
        app:layout_constraintBottom_toTopOf="@+id/buttonSpider"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Philidendron" />

</android.support.constraint.ConstraintLayout>